[Unit]
Description=Dispenser.front Node.js App
After=graphical.target

[Service]
Type=simple
User=infomedia
Environment=NODE_ENV=production
Environment=PORT=5500
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/infomedia/.Xauthority
WorkingDirectory=/usr/local/device/nodejs/dispenser.front
ExecStartPre=/usr/bin/xrandr --output HDMI-1 --rotate left
ExecStart=/usr/bin/node /usr/local/device/nodejs/dispenser.front/index.js
Restart=always

[Install]
WantedBy=graphical.target
