[Unit]
Description=Dispenser.front Node.js + Express App
After=graphical.target

[Service]
Type=simple
User=infomedia
Environment=NODE_ENV=production
Environment=PORT=5500
WorkingDirectory=/usr/local/device/nodejs/dispenser.front
ExecStart=/usr/bin/node /usr/local/device/nodejs/dispenser.front/index.js
Restart=always

[Install]
WantedBy=graphical.target